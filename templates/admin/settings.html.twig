{% extends 'base.html.twig' %}

{% block title %}Configuration de l'application - {{ name_site }}{% endblock %}

{% block body %}

    <h2 class="row justify-content-center p-2">Configuration de l'application</h2>
    <div class="row justify-content-center">
        <form action="{{ path('app_admin_settings') }}" method="post">
            <div class="card mt-3">
                <div class="card-body">
                    <h3 class="card-title text-center">Statuts par d√©faut</h3>

                    {% for param in choicestatus %}

                        <div class="form-floating mb-2">
                            <select class="form-select" name="{{ param.keySetting }}" id="{{ param.keySetting }}">
                                {% for status in statuslist %}
                                    <option value="{{ status.id }}" {% if status.id==param.value %} selected {% endif %}>{{ status.statusName }}</option>
                                {% endfor %}

                            </select>
                            <label for="{{ param.keySetting }}"
                                   class="form-label">{% if param.label %} {{ param.label }} {% else %}{{ param.keySetting }}{% endif %}</label>
                        </div>


                    {% endfor %}


                </div>

            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h3 class="card-title text-center">Serveur SMTP</h3>

                    {% for param in smtp %}

                        <div class="form-floating mb-2">
                            <input type="{% if param.keySetting ends with "pass" %}password{% else %}text{% endif %}"
                                   id="{{ param.keySetting }}" name="{{ param.keySetting }}"
                                   autocomplete="address" placeholder="Adresse" class="form-control"
                                   value="{{ param.value }}">
                            <label for="{{ param.keySetting }}" class="form-label">
                                {% if param.label %} {{ param.label }} {% else %}{{ param.keySetting }}{% endif %}</label>
                        </div>


                    {% endfor %}


                </div>
                <div class="row justify-content-center border-top">
                    <button class="btn btn-success col-2 m-2">Valider
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">


    </div>


{% endblock %}
