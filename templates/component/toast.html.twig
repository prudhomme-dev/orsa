<div class="toast-container position-absolute p-3 bottom-1 end-0" id="toastPlacement"
     data-original-class="toast-container position-absolute p-3">

    {% for flash in app.flashes('messages') %}
        <div class="toast fade show bg-primary" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-primary">
                <strong class="me-auto ">Confirmation</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                {{ flash }}
            </div>
        </div>

    {% endfor %}

    {% for flash in app.flashes('success') %}
        <div class="toast fade show bg-success" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success">
                <strong class="me-auto ">Succ√®s</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                {{ flash }}
            </div>
        </div>

    {% endfor %}

    {% for flashError in app.flashes('error') %}
        <div class="toast fade show bg-danger" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-danger">
                <strong class="me-auto ">Erreur</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                {{ flashError }}
            </div>
        </div>
    {% endfor %}
</div>
