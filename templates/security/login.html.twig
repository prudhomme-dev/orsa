{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ name_site }}{% endblock %}

{% block body %}
    <h2 class="row justify-content-center p-2">Se Connecter</h2>
    <div class="row">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
    <div class="row justify-content-around">
        <div class="col-12 col-md-6 align-self-center">
            <img src="{{ asset('./assets/img/login-img.jpg') }}" class="img-fluid title-image" alt="Se connecter">
        </div>
        <div class="col-12 col-md-6 align-self-center">
            <form method="post">
                <h1 class="h3 mb-3 font-weight-normal">Saisissez vos identifiants</h1>
                <div class="form-floating">
                    <input type="email" value="{{ last_username }}" placeholder="Votre Adresse E-Mail" name="email"
                           id="inputEmail"
                           class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="inputEmail">Adresse E-Mail</label>
                </div>
                <div class="form-floating">

                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" placeholder="Votre mot de passe"
                           required>
                    <label for="inputPassword">Mot de passe</label>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="form-check form-switch mb-3 mt-1">
                    <input class="form-check-input" id="checkRemember" role="switch" type="checkbox"
                           name="_remember_me">
                    <label for="checkRemember" class="form-check-label text-end">Se rappeler de moi</label>
                </div>

                <div class="row justify-content-center">
                    <button class="btn btn-sm btn-success col-8 col-sm-6 col-md-4 col-lg-3" type="submit">
                        Se Connecter
                    </button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a class="btn btn-sm btn-success" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©
                    ?</a>
            </div>
        </div>
    </div>
{% endblock %}
