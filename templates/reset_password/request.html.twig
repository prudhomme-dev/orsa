{% extends 'base.html.twig' %}

{% block title %}{{ env }} - Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Mot de passe oublié</h1>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
    <div>
        <small>
            Entrez votre adresse E-Mail et vous recevrez un lien par E-Mail pour réinitialiser votre mot de passe
        </small>
    </div>

    <button class="btn btn-danger">Envoyer un lien de réinitialisation</button>
    {{ form_end(requestForm) }}
{% endblock %}
